<resources>
    <!-- Base application theme. -->
    <style name="Theme.Daweney" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/navy_blue</item>

        <!-- Customize your theme here. -->

        <!--progressBarColor-->
        <item name="android:indeterminateTint">@color/progressBarColor</item>

        <!--background-->
        <item name="android:windowBackground">@drawable/linear_blue_sky_color_shape</item>

        <item name="colorOnSurface">@color/black</item>
        <item name="textAppearanceCaption">@style/InputText</item>
        <item name="buttonCompat">@style/ButtonStyle</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>

    </style>

    <!-- Edite text-->
    <style name="InputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>  //to change outline focused box stroke color
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="hintTextColor">#8FA3B0</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="android:textColorHint">#E0F2F1</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <!-- add any other properties you want to customize -->
    </style>

    <!--textView-->
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_view_color</item>
    </style>

    <!--normal text size-->
    <style name="NormalTextViewStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <!--Important text size-->
    <style name="ImportantTextViewStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/important_text_size</item>
    </style>

    <!--line -->
    <style name="line" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/light_blue_400</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
    </style>
    <style name="light_line" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/light_blue_100</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:alpha">.5</item>
        <item name="android:layout_height">3dp</item>
    </style>

    <!-- button-->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_state</item>
        <item name="backgroundTint">@null</item>
    </style>
                       <!--float button-->
    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@null</item>
        <item name="elevation">12dp</item>
    </style>

       <!--label style-->
    <style name="LabelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

        <!--send request editText-->
    <style name="SendRequestEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_blue_400</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="hintTextColor">#8FA3B0</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="android:textColorHint">#E0F2F1</item>
        <item name="startIconTint">#8FA3B0</item>
        <item name="suffixTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="suffixTextColor">#8FA3B0</item>
        <item name="prefixTextColor">#E0F2F1</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="endIconScaleType">centerInside</item>
        <item name="endIconTint">#E0F2F1</item>
    </style>

    <style name="DateAndTimeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/light_blue_200</item>
        <item name="colorOnPrimary">@color/navy_blue</item>
        <item name="android:colorControlHighlight">@color/black</item>
    </style>


